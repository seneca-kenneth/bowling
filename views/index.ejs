        .btn-check:checked + .option-card { background-color: #388697; }
        .btn-check:checked + .option-card .user-name { color: white !important; }
        .btn-check:checked + .option-card .guest-label { color: white !important; }
        .balance-box { background-color: #e9ecef; border-radius: 8px; padding: 2px 8px; width: 100%; text-align: center; }
