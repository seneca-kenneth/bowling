    </div>
</nav>

<div class="container">
    <div class="collapse mb-3 <%= keepOpen ? 'show' : '' %>" id="settingsBox">
        <div class="card card-body bg-light border-primary shadow-sm">
            <h6 class="fw-bold text-primary">ğŸ”§ <span data-i18n="settings_title">è¨­å®š</span></h6>
            <form action="/activity/<%= activity.id %>/settings" method="POST" class="mb-3">
                <div class="mb-2">
                    <label class="small text-muted" data-i18n="label_activity_name">æ´»å‹•åç¨±</label>
                    <input type="text" name="name" class="form-control fw-bold" value="<%= activity.name %>" required>
                </div>
                <div class="row g-2 align-items-center">
                    <div class="col-12"><label class="small text-muted" data-i18n="label_threshold">ä½é¤˜é¡æé†’ $</label><input type="number" step="10" name="threshold" class="form-control" value="<%= alertThreshold %>"></div>
                    <div class="col-12 text-end mt-2"><button class="btn btn-sm btn-secondary w-100" data-i18n="btn_save_settings">ä¿å­˜è¨­å®š</button></div>
                </div>
            </form>
        </div>
    </div>

    <% if (alertUsers.length > 0) { %>
        <div class="alert alert-danger py-2 mb-3 small shadow-sm"><strong>âš ï¸ <span data-i18n="alert_balance">é¤˜é¡ä¸è¶³</span> $<%= alertThreshold %>:</strong> <%= alertUsers.map(u => u.name).join(', ') %></div>
    <% } %>

    <form action="/activity/<%= activity.id %>/record" method="POST" id="gameForm">
        
        <% if (!activity.type || activity.type === 'bowling') { %>
            
            <div class="card card-body bg-white mb-3 shadow-sm sticky-top border-0 border-bottom" style="top: 0; z-index: 900;">
                <label class="form-label fw-bold text-primary" data-i18n="label_total_cost">æ˜¯æ¬¡ç¸½æ•¸ ($)</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-primary text-white border-0">$</span>
                    <input type="number" step="0.01" name="totalCost" class="form-control fw-bold fs-4" placeholder="0.00" required>
                    <button class="btn btn-primary px-3" data-i18n="btn_confirm">ç¢ºèª</button>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span class="small text-muted"><span id="totalPeople">0</span>äºº / <span id="totalGames">0</span>å±€</span>
                    <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill" onclick="resetForm()" data-i18n="btn_reset">é‡ç½®</button>
                </div>
            </div>

            <div class="row g-2">
                <% users.forEach(user => { %>
                    <div class="col-6 col-md-4">
                        <div class="bowling-card" id="card-<%= user.id %>">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="fw-bold fs-5 text-truncate" style="max-width: 60%;"><%= user.name %></div>
                                <div class="balance-num small <%= user.balance < 0 ? 'neg-bal' : 'pos-bal' %>">$<%= user.balance.toFixed(2) %></div>
                            </div>
                            <div class="input-group">
                                <input type="number" inputmode="numeric" pattern="[0-9]*" step="1" min="0" 
                                       name="games[uid_<%= user.id %>]" 
                                       class="form-control text-center fw-bold game-input" 
                                       placeholder="0" data-userid="<%= user.id %>">
                                <span class="input-group-text bg-light border-0 small text-muted">å±€</span>
                            </div>
                        </div>
                    </div>
                <% }) %>

                <div class="col-6 col-md-4">
                    <div class="guest-card" id="card-guest">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold fs-5 text-truncate">ğŸ‘¥ è¨ªå®¢</div>
                            <div class="balance-num small text-muted">Cash</div>
                        </div>
                        <div class="input-group">
                            <input type="number" inputmode="numeric" pattern="[0-9]*" step="1" min="0" 
                                   name="guestGames" 
                                   class="form-control text-center fw-bold game-input text-secondary" 
                                   placeholder="0" data-userid="guest">
                            <span class="input-group-text bg-light border-0 small text-muted">å±€</span>
                        </div>
                    </div>
                </div>

            </div>
            <div style="height: 60px;"></div>

        <% } else { %>
            <div class="card card-body bg-white mb-3 shadow-sm sticky-top border-0 border-bottom" style="top: 0; z-index: 900;">
                <label class="form-label fw-bold text-primary" data-i18n="label_total_cost">æ˜¯æ¬¡ç¸½æ•¸ ($)</label>
                <div class="input-group input-group-lg mb-2">
                    <span class="input-group-text bg-primary text-white border-0">$</span>
                    <input type="number" step="0.01" name="totalCost" id="totalCostInput" 
                           class="form-control fw-bold fs-4" value="45.20" required oninput="updateSplit()">
                    <button class="btn btn-primary px-3" data-i18n="btn_confirm">ç¢ºèª</button>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="small text-muted"><span data-i18n="txt_select_players">æ€é¸æœ‰ä»½ç©çš„äºº</span> (<span id="splitCount">0</span>)</span>
                    <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill px-3" onclick="toggleAll()" data-i18n="btn_toggle_all">å…¨é¸ / æ¸…é™¤</button>
                </div>
            </div>

            <div class="row g-2">
                <% users.forEach(user => { %>
                    <div class="col-6">
                        <input type="checkbox" class="btn-check user-checkbox" name="selectedUsers" value="<%= user.id %>" id="user-<%= user.id %>" onchange="updateSplit()">
                        <label class="option-card w-100 p-2 shadow-sm rounded text-primary" for="user-<%= user.id %>">
                            <span class="fs-5 fw-bold text-truncate w-100 text-center user-name"><%= user.name %></span>
                            <div class="balance-box mt-1"><span class="fs-5 fw-bold <%= user.balance < 0 ? 'text-danger' : 'text-success' %>">$<%= user.balance.toFixed(2) %></span></div>
                            <div class="split-info mt-2 w-100 text-center" id="split-info-<%= user.id %>">-$0.00</div>
                            <div class="d-flex justify-content-center align-items-center gap-2 mt-1" onclick="event.preventDefault()">
                                <button type="button" class="guest-btn" onclick="updateGuest('<%= user.id %>', -1)">-</button>
                                <span class="small text-muted fw-bold guest-label">ğŸ‘¤+<span id="guest-count-<%= user.id %>">0</span></span>
                                <button type="button" class="guest-btn" onclick="updateGuest('<%= user.id %>', 1)">+</button>
                                <input type="hidden" name="guests[uid_<%= user.id %>]" id="guest-input-<%= user.id %>" value="0">
                            </div>
                        </label>
                    </div>
                <% }) %>
            </div>
            <div style="height: 60px;"></div>
        <% } %>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const translations = { zh: { menu_members: "æœƒå“¡ç®¡ç†", menu_history: "æ­·å²ç´€éŒ„", menu_settings: "è¨­å®š", menu_share: "åˆ†äº«é€£çµ (åªè®€)", settings_title: "è¨­å®š", label_activity_name: "æ´»å‹•åç¨±", label_total_cost: "æ˜¯æ¬¡ç¸½æ•¸ ($)", label_cost: "æ¯å±€é‡‘é¡", label_threshold: "ä½é¤˜é¡æé†’ $", btn_save_settings: "ä¿å­˜è¨­å®š", btn_confirm: "ç¢ºèª", alert_balance: "é¤˜é¡ä¸è¶³", btn_reset: "é‡ç½®", unit_game: "å±€", txt_select_players: "æ€é¸æœ‰ä»½ç©çš„äºº", btn_toggle_all: "å…¨é¸ / æ¸…é™¤", txt_people: "äºº", txt_games: "å±€", btn_deduct: "æ‰£æ•¸" }, en: { menu_members: "Members", menu_history: "History", menu_settings: "Settings", menu_share: "Share Link (Read-only)", settings_title: "Settings", label_activity_name: "Activity Name", label_total_cost: "Total Cost ($)", label_cost: "Cost Per Game", label_threshold: "Alert Threshold $", btn_save_settings: "Save Settings", btn_confirm: "Confirm", alert_balance: "Low Balance", btn_reset: "Reset", unit_game: "G", txt_select_players: "Select Players", btn_toggle_all: "Select/Clear All", txt_people: "Ppl", txt_games: "Gms", btn_deduct: "Submit" } };
    let currentLang = localStorage.getItem('appLang') || 'zh';
    function applyLanguage() { const langData = translations[currentLang]; document.querySelectorAll('[data-i18n]').forEach(el => { const key = el.getAttribute('data-i18n'); if (langData[key]) el.innerText = langData[key]; }); document.getElementById('langLabel').innerText = currentLang === 'zh' ? 'ä¸­' : 'ENG'; }
    function toggleLanguage() { currentLang = currentLang === 'zh' ? 'en' : 'zh'; localStorage.setItem('appLang', currentLang); applyLanguage(); }
    applyLanguage();

    function updateGuest(userId, delta) { const input = document.getElementById('guest-input-' + userId); const display = document.getElementById('guest-count-' + userId); const checkbox = document.getElementById('user-' + userId); let val = parseInt(input.value) || 0; val += delta; if (val < 0) val = 0; input.value = val; display.innerText = val; if (val > 0 && !checkbox.checked) checkbox.checked = true; updateSplit(); }

    const inputs = document.querySelectorAll('.game-input');
    const totalPeopleSpan = document.getElementById('totalPeople');
    const totalGamesSpan = document.getElementById('totalGames');

    if(inputs.length > 0) {
        function updateSummary() {
            let people = 0; let games = 0;
            inputs.forEach(input => {
                const val = parseInt(input.value) || 0;
                const card = input.closest('.bowling-card') || input.closest('.guest-card');
                if (card) { if (val > 0) card.classList.add('active'); else if(!input.value) card.classList.remove('active'); }
                if (val > 0) { if(input.name.includes('games[')) people++; games += val; }
            });
            const guestInput = document.querySelector('input[name="guestGames"]');
            if (guestInput && parseInt(guestInput.value) > 0) { document.getElementById('card-guest').classList.add('active'); } else if (guestInput) { document.getElementById('card-guest').classList.remove('active'); }
            if(totalPeopleSpan) totalPeopleSpan.innerText = people; 
            if(totalGamesSpan) totalGamesSpan.innerText = games;
        }
        inputs.forEach(input => input.addEventListener('input', updateSummary));
    }

    function resetForm() { inputs.forEach(i => i.value = ''); if(totalPeopleSpan) updateSummary(); document.querySelectorAll('.bowling-card, .guest-card').forEach(c => c.classList.remove('active')); }
    function toggleAll() { const boxes = document.querySelectorAll('.user-checkbox'); const allChecked = Array.from(boxes).every(b => b.checked); boxes.forEach(b => b.checked = !allChecked); updateSplit(); }
    function updateSplit() {
        const totalInput = document.getElementById('totalCostInput'); if (!totalInput) return; 
        const checkboxes = document.querySelectorAll('.user-checkbox');
        let totalCost = parseFloat(totalInput.value) || 0;
        let totalHeads = 0; let totalGuests = 0;
        checkboxes.forEach(cb => { if (cb.checked) { let myHeads = 1; const guestVal = parseInt(document.getElementById('guest-input-' + cb.value).value) || 0; myHeads += guestVal; totalHeads += myHeads; totalGuests += guestVal; } });
        const countSpan = document.getElementById('splitCount');
        if (countSpan) { if (totalGuests > 0) countSpan.innerText = `${document.querySelectorAll('.user-checkbox:checked').length} + ${totalGuests} Guest`; else countSpan.innerText = document.querySelectorAll('.user-checkbox:checked').length; }
        let costPerHead = 0; if (totalHeads > 0) costPerHead = totalCost / totalHeads;
        checkboxes.forEach(cb => {
            const infoDiv = document.getElementById('split-info-' + cb.value);
            if (cb.checked) {
                const guestVal = parseInt(document.getElementById('guest-input-' + cb.value).value) || 0;
                const myCost = costPerHead * (1 + guestVal);
                infoDiv.innerText = `-$${myCost.toFixed(2)}`;
                if(guestVal > 0) infoDiv.innerText += ` (1+${guestVal})`;
                infoDiv.style.visibility = 'visible';
            } else { infoDiv.style.visibility = 'hidden'; }
        });
    }
    updateSplit();
</script>
</body>
</html>