<div class="container">
    <div class="collapse mb-3 <%= keepOpen ? 'show' : '' %>" id="settingsBox">
        <div class="card card-body bg-light border-primary shadow-sm">
            <h6 class="fw-bold text-primary">ğŸ”§ <span data-i18n="settings_title">è¨­å®š</span></h6>
            <form action="/activity/<%= activity.id %>/settings" method="POST" class="mb-3">
                <div class="mb-2">
                    <label class="small text-muted" data-i18n="label_activity_name">æ´»å‹•åç¨±</label>
                    <input type="text" name="name" class="form-control fw-bold" value="<%= activity.name %>" required>
                </div>
                <div class="row g-2 align-items-center">
                    <% if (!activity.type || activity.type === 'bowling') { %>
                        <div class="col-6">
                            <label class="small text-muted" data-i18n="label_cost">æ¯å±€é‡‘é¡</label>
                            <input type="number" step="0.01" name="cost" class="form-control" value="<%= costPerGame %>">
                        </div>
                        <div class="col-6">
                            <label class="small text-muted" data-i18n="label_threshold">ä½é¤˜é¡æé†’ $</label>
                            <input type="number" step="10" name="threshold" class="form-control" value="<%= alertThreshold %>">
                        </div>
                    <% } else { %>
                        <input type="hidden" name="cost" value="<%= costPerGame %>">
                        <div class="col-12">
                            <label class="small text-muted" data-i18n="label_threshold">ä½é¤˜é¡æé†’ $</label>
                            <input type="number" step="10" name="threshold" class="form-control" value="<%= alertThreshold %>">
                        </div>
                    <% } %>
                    <div class="col-12 text-end mt-2">
                        <button class="btn btn-sm btn-secondary w-100" data-i18n="btn_save_settings">ä¿å­˜è¨­å®š</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <% if (alertUsers.length > 0) { %>
        <div class="alert alert-danger py-2 mb-3 small shadow-sm">
            <strong>âš ï¸ <span data-i18n="alert_balance">é¤˜é¡ä¸è¶³</span> $<%= alertThreshold %>:</strong> 
            <%= alertUsers.map(u => u.name).join(', ') %>
        </div>
    <% } %>

    <form action="/activity/<%= activity.id %>/record" method="POST" id="gameForm">
        
        <% if (!activity.type || activity.type === 'bowling') { %>
            <div class="d-flex justify-content-between align-items-center mb-2 px-1">
                <h5 class="mb-0 text-secondary"><span data-i18n="cost_per_game">æ¯å±€</span> $<%= costPerGame %></h5>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="resetForm()" data-i18n="btn_reset">é‡ç½®</button>
            </div>
            <div class="row g-2">
                <% users.forEach(user => { %>
                    <div class="col-12 col-md-6">
                        <div class="user-card p-2 rounded d-flex justify-content-between align-items-center shadow-sm bg-white" id="card-<%= user.id %>">
                            <div class="w-50">
                                <div class="fw-bold fs-5"><%= user.name %></div>
                                <div class="balance-num small <%= user.balance < 0 ? 'neg-bal' : 'pos-bal' %>">
                                    $<%= user.balance.toFixed(2) %>
                                </div>
                            </div>
                            <div class="w-50">
                                <div class="input-group">
                                    <input type="number" inputmode="numeric" pattern="[0-9]*" step="1" min="0"
                                           name="games[uid_<%= user.id %>]" 
                                           class="form-control text-center fw-bold game-input" 
                                           placeholder="0" data-userid="<%= user.id %>">
                                    <span class="input-group-text bg-light border-0 small text-muted" data-i18n="unit_game">å±€</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div style="height: 60px;"></div>
            <div class="sticky-footer d-flex gap-2 justify-content-between align-items-center border-top">
                <div class="small text-muted">
                    <span id="totalPeople" class="fw-bold text-dark fs-5">0</span> <span data-i18n="txt_people">äºº</span>
                    / <span id="totalGames" class="fw-bold text-dark fs-5">0</span> <span data-i18n="txt_games">å±€</span>
                </div>
                <button type="submit" class="btn btn-primary px-5 fw-bold shadow" data-i18n="btn_deduct">æ‰£æ•¸</button>
            </div>

        <% } else { %>
            <div class="card card-body bg-white mb-3 shadow-sm sticky-top border-0 border-bottom" style="top: 0; z-index: 900;">
                <label class="form-label fw-bold text-primary" data-i18n="label_total_cost">æ˜¯æ¬¡ç¸½æ•¸ ($)</label>
                <div class="input-group input-group-lg mb-2">
                    <span class="input-group-text bg-primary text-white border-0">$</span>
                    <input type="number" step="0.1" name="totalCost" id="totalCostInput" 
                           class="form-control fw-bold fs-4" value="45.2" required oninput="updateSplit()">
                    <button class="btn btn-primary px-3" data-i18n="btn_confirm">ç¢ºèª</button>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2 px-1">
                    <span class="small fw-bold text-muted">ğŸ‘¥ <span data-i18n="label_guests">è¨ªå®¢/Guest</span></span>
                    <div class="input-group" style="width: 140px;">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="changeGuest(-1)">-</button>
                        <input type="text" name="guestCount" id="guestInput" class="form-control text-center fw-bold" value="0" readonly>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="changeGuest(1)">+</button>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="small text-muted"><span data-i18n="txt_select_players">æ€é¸æœ‰ä»½ç©çš„äºº</span> (<span id="splitCount">0</span>)</span>
                    <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill px-3" onclick="toggleAll()" data-i18n="btn_toggle_all">å…¨é¸ / æ¸…é™¤</button>
                </div>
            </div>
            <div class="row g-2">
                <% users.forEach(user => { %>
                    <div class="col-6">
                        <input type="checkbox" class="btn-check user-checkbox" name="selectedUsers" value="<%= user.id %>" id="user-<%= user.id %>" onchange="updateSplit()">
                        <label class="option-card w-100 p-2 h-100 d-flex flex-column justify-content-center align-items-center shadow-sm rounded text-primary" for="user-<%= user.id %>">
                            <span class="fs-5 fw-bold text-truncate w-100 text-center user-name"><%= user.name %></span>
                            <div class="balance-box mt-2">
                                <span class="fs-5 fw-bold <%= user.balance < 0 ? 'text-danger' : 'text-success' %>">
                                    $<%= user.balance.toFixed(1) %>
                                </span>
                            </div>
                            <div class="split-info mt-1 text-white fw-bold small" id="split-info-<%= user.id %>" style="display: none;">-$0.0</div>
                        </label>
                    </div>
                <% }) %>
            </div>
            <div style="height: 60px;"></div>
        <% } %>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const translations = {
        zh: {
            menu_members: "æœƒå“¡ç®¡ç†",
            menu_history: "æ­·å²ç´€éŒ„",
            menu_settings: "è¨­å®š",
            menu_share: "åˆ†äº«é€£çµ (åªè®€)",
            settings_title: "è¨­å®š",
            label_activity_name: "æ´»å‹•åç¨±",
            label_cost: "æ¯å±€é‡‘é¡",
            label_threshold: "ä½é¤˜é¡æé†’ $",
            btn_save_settings: "ä¿å­˜è¨­å®š",
            btn_confirm: "ç¢ºèª",
            btn_add_user: "åŠ äºº",
            alert_balance: "é¤˜é¡ä¸è¶³",
            cost_per_game: "æ¯å±€",
            btn_reset: "é‡ç½®",
            unit_game: "å±€",
            txt_people: "äºº",
            txt_games: "å±€",
            btn_deduct: "æ‰£æ•¸",
            label_total_cost: "æ˜¯æ¬¡ç¸½æ•¸ ($)",
            txt_select_players: "æ€é¸æœ‰ä»½ç©çš„äºº",
            btn_toggle_all: "å…¨é¸ / æ¸…é™¤",
            placeholder_new_user: "æ–°æœƒå“¡å",
            label_guests: "è¨ªå®¢/Guest"
        },
        en: {
            menu_members: "Members",
            menu_history: "History",
            menu_settings: "Settings",
            menu_share: "Share Link (Read-only)",
            settings_title: "Settings",
            label_activity_name: "Activity Name",
            label_cost: "Cost Per Game",
            label_threshold: "Alert Threshold $",
            btn_save_settings: "Save Settings",
            btn_confirm: "Confirm",
            btn_add_user: "Add",
            alert_balance: "Low Balance",
            cost_per_game: "Per Game",
            btn_reset: "Reset",
            unit_game: "G",
            txt_people: "Ppl",
            txt_games: "Gms",
            btn_deduct: "Submit",
            label_total_cost: "Total Amount ($)",
            txt_select_players: "Select Players",
            btn_toggle_all: "Select/Clear All",
            placeholder_new_user: "New Name",
            label_guests: "Guests"
        }
    };

    let currentLang = localStorage.getItem('appLang') || 'zh';

    function applyLanguage() {
        const langData = translations[currentLang];
        document.querySelectorAll('[data-i18n]').forEach(el => {
            const key = el.getAttribute('data-i18n');
            if (langData[key]) el.innerText = langData[key];
        });
        const inputNewUser = document.getElementById('inputNewUser');
        if(inputNewUser && translations[currentLang].placeholder_new_user) {
            inputNewUser.placeholder = translations[currentLang].placeholder_new_user;
        }
        document.getElementById('langLabel').innerText = currentLang === 'zh' ? 'ä¸­' : 'ENG';
    }

    function toggleLanguage() {
        currentLang = currentLang === 'zh' ? 'en' : 'zh';
        localStorage.setItem('appLang', currentLang);
        applyLanguage();
    }

    applyLanguage();

    function changeGuest(delta) {
        const input = document.getElementById('guestInput');
        let val = parseInt(input.value) || 0;
        val += delta;
        if (val < 0) val = 0;
        input.value = val;
        updateSplit();
    }

    const inputs = document.querySelectorAll('.game-input');
    const totalPeopleSpan = document.getElementById('totalPeople');
    const totalGamesSpan = document.getElementById('totalGames');

    if(inputs.length > 0) {
        function updateSummary() {
            let people = 0; let games = 0;
            inputs.forEach(input => {
                const val = parseInt(input.value);
                const card = document.getElementById('card-' + input.dataset.userid);
                if (val > 0) { people++; games += val; card.classList.add('active'); } 
                else { card.classList.remove('active'); }
            });
            totalPeopleSpan.innerText = people; totalGamesSpan.innerText = games;
        }
        inputs.forEach(input => input.addEventListener('input', updateSummary));
    }

    function resetForm() { inputs.forEach(i => i.value = ''); if(totalPeopleSpan) updateSummary(); }

    function toggleAll() {
        const boxes = document.querySelectorAll('.user-checkbox');
        const allChecked = Array.from(boxes).every(b => b.checked);
        boxes.forEach(b => b.checked = !allChecked);
        updateSplit(); 
    }

    function updateSplit() {
        const totalInput = document.getElementById('totalCostInput');
        if (!totalInput) return; 

        const checkboxes = document.querySelectorAll('.user-checkbox');
        const checkedBoxes = document.querySelectorAll('.user-checkbox:checked');
        const guestInput = document.getElementById('guestInput');
        const guestCount = parseInt(guestInput.value) || 0;
        
        let total = parseFloat(totalInput.value) || 0;
        let selectedCount = checkedBoxes.length;
        let finalCount = selectedCount + guestCount;
        
        const countSpan = document.getElementById('splitCount');
        if (countSpan) countSpan.innerText = selectedCount;

        let perHead = 0;
        if (finalCount > 0) {
            perHead = total / finalCount;
        }

        checkboxes.forEach(cb => {
            const infoDiv = document.getElementById('split-info-' + cb.value);
            if (cb.checked) {
                infoDiv.innerText = `-$${perHead.toFixed(1)}`;
                infoDiv.style.display = 'block';
            } else {
                infoDiv.style.display = 'none';
            }
        });
    }

    updateSplit();
</script>
</body>
