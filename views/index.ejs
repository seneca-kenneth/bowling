<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const inputs = document.querySelectorAll('.game-input');
    const totalPeopleSpan = document.getElementById('totalPeople');
    const totalGamesSpan = document.getElementById('totalGames');
    function updateSummary() {
        let people = 0; let games = 0;
        inputs.forEach(input => {
            const val = parseInt(input.value);
            const card = document.getElementById('card-' + input.dataset.userid);
            if (val > 0) { people++; games += val; card.classList.add('active'); } 
            else { card.classList.remove('active'); }
        });
        totalPeopleSpan.innerText = people; totalGamesSpan.innerText = games;
    }
    inputs.forEach(input => input.addEventListener('input', updateSummary));
    function resetForm() { inputs.forEach(i => i.value = ''); updateSummary(); }
</script>
