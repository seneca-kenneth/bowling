<!DOCTYPE html>
<html>
<head>
    <title><%= activity.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <meta name="theme-color" content="#388697">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-primary { background-color: #388697 !important; }
        .text-primary { color: #388697 !important; }
        .amount-pos { color: green; font-weight: bold; }
        .amount-neg { color: red; font-weight: bold; }
        body { background-color: #f8f9fa; }
        ::-webkit-scrollbar { display: none; }
        html, body { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-primary mb-3">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <span class="navbar-brand mb-0 h1 mx-auto"><%= activity.name %></span>
        
        <button class="btn btn-sm btn-outline-light position-absolute end-0 me-3" onclick="toggleLanguage()">
            üåê <span id="langLabel">ENG</span>
        </button>
    </div>
</nav>

<div class="container">
    
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white fw-bold text-center" data-i18n="title_balance">ÊúÉÂì°È§òÈ°ç</div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th data-i18n="th_name">ÂßìÂêç</th>
                        <th data-i18n="th_balance">È§òÈ°ç</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="fw-bold"><%= user.name %></td>
                            <td class="<%= user.balance < 0 ? 'text-danger' : 'text-success' %> fw-bold">
                                $<%= user.balance.toFixed(1) %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-bold text-center" data-i18n="title_records">ÊúÄËøëÁ¥ÄÈåÑ (20Á≠Ü)</div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0 small align-middle">
                <tbody>
                    <% transactions.forEach(t => { %>
                        <tr>
                            <td class="px-3">
                                <div><strong><%= t.name || 'Unknown' %></strong></div>
                                <div class="text-muted" style="font-size: 0.8rem;"><%= t.date.substring(0, 10) %></div>
                            </td>
                            <td>
                                <%= t.description %>
                                <% if(t.type === 'deposit') { %> 
                                    <span class="badge bg-success" data-i18n="badge_deposit">ÂÖ•Êï∏</span> 
                                <% } %>
                            </td>
                            <td class="text-end px-3 <%= t.amount >= 0 ? 'amount-pos' : 'amount-neg' %>">
                                <%= t.amount > 0 ? '+' : '' %><%= t.amount.toFixed(1) %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4 mb-4 text-muted small">
        <span data-i18n="footer_note">Ê≠§È†ÅÈù¢ÂÉÖ‰æõÊü•Èñ±ÔºåÁÑ°Ê≥ïÈÄ≤Ë°åÊìç‰Ωú„ÄÇ</span>
    </div>

</div>

<script>
    const translations = {
        zh: {
            title_balance: "ÊúÉÂì°È§òÈ°ç",
            th_name: "ÂßìÂêç",
            th_balance: "È§òÈ°ç",
            title_records: "ÊúÄËøëÁ¥ÄÈåÑ (20Á≠Ü)",
            badge_deposit: "ÂÖ•Êï∏",
            footer_note: "Ê≠§È†ÅÈù¢ÂÉÖ‰æõÊü•Èñ±ÔºåÁÑ°Ê≥ïÈÄ≤Ë°åÊìç‰Ωú„ÄÇ"
        },
        en: {
            title_balance: "Member Balance",
            th_name: "Name",
            th_balance: "Balance",
            title_records: "Recent Records (20)",
            badge_deposit: "Deposit",
            footer_note: "This page is read-only."
        }
    };

    let currentLang = localStorage.getItem('appLang') || 'zh';

    function applyLanguage() {
        const langData = translations[currentLang];
        document.querySelectorAll('[data-i18n]').forEach(el => {
            const key = el.getAttribute('data-i18n');
            if (langData[key]) el.innerText = langData[key];
        });
        document.getElementById('langLabel').innerText = currentLang === 'zh' ? '‰∏≠' : 'ENG';
    }

    function toggleLanguage() {
        currentLang = currentLang === 'zh' ? 'en' : 'zh';
        localStorage.setItem('appLang', currentLang);
        applyLanguage();
    }

    // Initialize
    applyLanguage();
</script>
</body>
</html>